{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "module": "ESNext",
        "importHelpers": true,
        "lib": [
            "DOM",
            "ES2015",
            "ES2016.Array.Include",
            "ES2017.String",
            "ES2017.Object"
        ]
    },
    "include": ["src"]
}